<div class="flex flex-col" >
  <h1 class="text-2xl md:text-3xl font-semibold"><%= @property.title %></h1>
  <div class="mt-3">
    <p class="text-gray-600 mb-4"><%= @property.description %> The price is <%= @property.price %>, and we are located at <%= @property.location %>.</p>
    <p class="text-gray-600 mb-4"> This property is a <strong><%= @property.property_type %></strong>.</p>
  </div>
  <div class="grid grid-flow-row  gap-3  mx-auto  md:grid-flow-col md:auto-cols-auto ">
    <% @property.images.each do |image| %>
      <div>
        <%= image_tag image.variant(resize_to_limit: [300, 300]) %>
      </div>
    <% end %>
  </div>
  <div class="mt-4">
    <%= link_to "Edit", edit_property_path(@property), class:"text-blue-500" %> /
    <%= link_to "Delete", property_path(@property), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },class:"text-red-500" %>
  </div>
</div>