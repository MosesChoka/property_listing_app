<div class="flex flex-col mx-auto pb-8">
  <div class="text-center py-6">
    <h2 class="text-2xl">Sign up</h2>
  </div>
  <div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="field mb-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Enter Email", class:"border solid border-blue-400 rounded-sm py-2 w-96 px-2" %>
      </div>
      <div class="field mb-4">
        <% if @minimum_password_length %>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder:"password", class:"border solid border-blue-400 rounded-sm py-2 w-96 px-2" %>
      </div>
      <div class="field mb-4">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"confirm password", class:"border solid border-blue-400 rounded-sm py-2 px-2 w-96" %>
      </div>
      <div class="actions border solid border-black rounded-sm w-56 text-center bg-blue-600 py-2 text-white mx-auto">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>
    <div class="mx-auto text-blue-500">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
