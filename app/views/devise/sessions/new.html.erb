<div class="flex flex-col mx-auto max-w-md  bg-white p-6 rounded-lg shadow-md mt-50 mb-50">
  <div class="text-center py-6">
    <h2 class="text-2xl sm:text-3xl font-semibold ">Log in</h2>
  </div>
  <div >
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field mb-4">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "enter email", class:"border solid border-blue-400 rounded-sm py-2 w-96 px-2" %>
      </div>
      <div class="field mb-4">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class:"border solid border-blue-400 rounded-sm py-2 w-96 px-2" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="field mb-4">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="actions border solid border-black rounded-sm w-56 text-center bg-blue-600 py-2 text-white mx-auto">
        <%= f.submit "Log in" %>
      </div>
    <% end %>
    <div class="text-blue-500">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>